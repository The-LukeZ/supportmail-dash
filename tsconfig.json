{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "bundler",
    // "allowArbitraryExtensions": true /* Why tf is this needed? Remove it and see the root +layout.svelte */
  },

  "include": [ "src/**/*", "static/**/*" ],
  "exclude": [ "node_modules", "build", ".svelte-kit" ]
}
